<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/common_dialog_circle_rect_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/leto_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="27dp"
            />


        <WebView
            android:id="@+id/leto_web"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/pricacy_dialog_gradient"
            />

        <LinearLayout
            android:id="@+id/layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/leto_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="11sp"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/leto_ok"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="同意"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/bluetooth_dialog_open_btn"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>