<?xml version="1.0" encoding="utf-8"?>     
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
	android:orientation="vertical"
    >

	<include layout="@layout/common_include_header" />

	<RelativeLayout
		android:id="@+id/rl_feedback_content"
		android:layout_width="fill_parent"
		android:layout_height="280dp"
		android:layout_marginTop="40dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		>

		<EditText
			android:id="@+id/et_feedback_content"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:background="@drawable/feedback_edit_bg"
			android:gravity="top|left"
			android:hint="@string/feedback_hint"
			android:inputType="textMultiLine"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop="20dp"
			android:textColor="@color/text_black"
			android:textColorHint="#8D8D8D"
			android:textCursorDrawable="@drawable/feedback_edit_color_cursor"
			android:textSize="16sp" />
	</RelativeLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="7dp"
		android:layout_marginEnd="20dp"
		android:layout_gravity="end"
		>
		<TextView
			android:id="@+id/tv_content_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_orange"
			android:textSize="14sp"
			tools:text="100"
			>
		</TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#8D8D8D"
			android:textSize="14sp"
			android:text="/"
			>
		</TextView>
		<TextView
			android:id="@+id/tv_max_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#8D8D8D"
			android:textSize="14sp"
			tools:text="200"
			>
		</TextView>
	</LinearLayout>



	<Button
		android:id="@+id/btn_feedback"
		android:layout_width="match_parent"
		android:layout_height="46dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginTop="67dp"
		android:text="提交"
		android:textSize="16sp"
		android:textColor="@color/white"
		android:background="@drawable/feedback_btn_right_blue"
		android:stateListAnimator="@null"
		/>

   
</LinearLayout>
